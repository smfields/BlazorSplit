@using Microsoft.AspNetCore.Components.Forms

<div class="w-1/3 mb-4">
    <EditForm Model="Form" class="bg-white rounded-md -space-x-px flex">
        <InputRadioGroup @bind-Value="Form.BlazorType">
            <label class=@("relative border flex cursor-pointer w-full py-2 px-3 rounded-tl-md rounded-bl-md z-10 " + (Form.BlazorType.Equals("Server") ? "bg-indigo-50 border-indigo-200" : "border-gray-200"))>
                <InputRadio Value="@("Server")" class="h-4 w-4 mt-0.5 cursor-pointer text-indigo-600 border-gray-300 focus:ring-indigo-500" aria-labelledby="mode-1-label" aria-describedby="mode-1-description" />
                <div class="ml-3 flex flex-col">
                    <span id="mode-1-label" class="block text-sm font-medium text-gray-900">Server</span>
                </div>
            </label>
            <label class=@("relative border flex cursor-pointer w-full py-2 px-3 rounded-tr-md rounded-br-md " + (Form.BlazorType.Equals("WebAssembly") ? "bg-indigo-50 border-indigo-200" : "border-gray-200"))>
                <InputRadio Value="@("WebAssembly")" class="h-4 w-4 mt-0.5 cursor-pointer text-indigo-600 border-gray-300 focus:ring-indigo-500" aria-labelledby="mode-1-label" aria-describedby="mode-1-description" />
                <div class="ml-3 flex flex-col">
                    <span id="mode-1-label" class="block text-sm font-medium text-gray-900">WebAssembly</span>
                </div>
            </label>
        </InputRadioGroup>
    </EditForm>
</div>

@code {

    [Parameter, EditorRequired]
    public CodePreview.FormModel Form { get; set; }

}